<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Documents.ItemRecordView">
    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/numTextField"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:text="55." />
            <LinearLayout
                android:orientation="horizontal"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:hint="@string/description">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/descriptionTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFieldBlue"
                        android:enabled="false"
                        android:background="@null"
                        android:textAlignment="viewStart"
                        android:text=" fd d הפרשי מחירים"
                        android:textSize="16sp"/>


                    android:textSize="16sp"/>

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_weight="2"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:hint="@string/total_price">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/totalTextField"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorFieldBlue"
                        android:inputType="text"
                        android:enabled="false"
                        android:background="@null"
                        android:text="13853.58ILS"
                        android:maxLines="1"
                        android:textSize="16sp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/measuresLayout"
            android:layout_marginStart="35dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:hint="@string/height">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/heightTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorFieldBlue"
                    android:inputType="text"
                    android:enabled="false"
                    android:textAlignment="viewStart"
                    android:background="@null"
                    android:text="135.2211M"
                    android:maxLines="2"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:hint="@string/width">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/widthTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorFieldBlue"
                    android:textAlignment="viewStart"
                    android:inputType="text"
                    android:enabled="false"
                    android:background="@null"
                    android:text="135.22M"
                    android:maxLines="2"
                    android:textSize="16sp"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:hint="@string/length">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lengthTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorFieldBlue"
                    android:textAlignment="viewStart"
                    android:inputType="text"
                    android:enabled="false"
                    android:background="@null"
                    android:text="135.22M"
                    android:maxLines="2"
                    android:textSize="16sp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="35dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:hint="@string/units">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/unitTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorFieldBlue"
                    android:inputType="text"
                    android:enabled="false"
                    android:background="@null"
                    android:text="13"
                    android:maxLines="2"
                    android:textSize="16sp"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:hint="@string/quantity">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/quantityTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorFieldBlue"
                    android:inputType="text"
                    android:enabled="false"
                    android:background="@null"
                    android:text="13335.222"
                    android:maxLines="2"
                    android:textSize="16sp"/>

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:hint="@string/price_per_quantity">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/priceQuantityTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorFieldBlue"
                    android:inputType="text"
                    android:enabled="false"
                    android:background="@null"
                    android:text="1335.222ILS"
                    android:maxLines="2"
                    android:textSize="16sp"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/detailsLayout"

            android:layout_marginStart="35dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/details">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/detailsTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorFieldBlue"
                    android:enabled="false"
                    android:background="@null"
                    android:textAlignment="viewStart"
                    android:text="short details about the item"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/commentsLayout"
            android:layout_marginStart="35dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/comments">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/commentsTextField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorFieldBlue"
                    android:enabled="false"
                    android:background="@null"
                    android:textAlignment="viewStart"
                    android:text="very very long comment about the item and manufacturer details"
                    android:maxLines="2"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
        <View style="@style/Divider"
            android:backgroundTint="@color/colorPrimaryDark"/>
    </LinearLayout>


</RelativeLayout>