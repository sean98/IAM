<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cardView"
    app:cardCornerRadius="0dp"
    android:transitionName="trans_card"
    tools:context=".CustomerActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/title_card_view"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:paddingBottom="10dp"
            app:cardCornerRadius="0dp">
            <LinearLayout
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/type_image"
                        android:transitionName="trans_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_home_black_24dp"
                        app:civ_border_width="1dp"
                        android:layout_marginStart="10dp">
                    </de.hdodenhof.circleimageview.CircleImageView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name_title_text"
                        android:transitionName="trans_name"
                        android:background="@null"
                        android:textAlignment="viewStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textSize="30sp"
                        android:text="Sean Goldfarb"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/group_text"
                            android:transitionName="trans_group"
                            android:textAlignment="viewStart"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Center"/>
                        <TextView
                            android:id="@+id/city_text"
                            android:transitionName="trans_city"
                            android:textAlignment="viewStart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:text="Tel-aviv"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
<FrameLayout
    android:id="@+id/fragmentContainer"
    android:layout_below="@id/title_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>

        <!--<com.google.android.material.floatingactionbutton.FloatingActionButton-->
